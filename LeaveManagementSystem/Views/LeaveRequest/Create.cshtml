@model LeaveRequestCreateVM

@{
    ViewData["Title"] = "Create Leave Request";
}

<h1>Create Leave Request</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               <label asp-for="StartDate" class="control-label"></label>
               <input asp-for="StartDate" class="form-control" />
				<span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
				<input asp-for="EndDate" class="form-control" />
				<span asp-validation-for="EndDate" class="text-danger"></span>
			</div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <select asp-for="LeaveTypeId" class="form-select" asp-items="Model.LeaveTypes"></select>
			</div>
            <div class="form-group">
                <label asp-for="RequestComments" class="control-label"></label>
                <textarea asp-for="RequestComments" class="form-control"></textarea>
                <span asp-validation-for="RequestComments" class="text-danger"></span>
            </div>
			<br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-controller ="LeaveAllocations" asp-action="Details" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            var today = new Date();
            var minDate = new Date(today.getFullYear(), today.getMonth(), today.getDate());

            $("#StartDate").datepicker({
                dateFormat: 'dd-mm-yy',
                changeMonth: true,
                changeYear: true,
                minDate: minDate
            });
            $("#EndDate").datepicker({
                dateFormat: 'dd-mm-yy',
                changeMonth: true,
                changeYear: true,
                minDate: minDate
            });
            $("#anim").on("change", function () {
                $("#StartDate").datepicker("option", "showAnim", $(this).val());
            });
            $("#anim").on("change", function () {
                $("#EndDate").datepicker("option", "showAnim", $(this).val());
            });
            $("#StartDate").on("keydown paste", function(e) {
                // Allow: tab, shift, ctrl, alt, home, end, left, right, up, down, F5, etc.
                var allowedKeys = [9, 16, 17, 18, 35, 36, 37, 38, 39, 40, 116];
                if (
                    allowedKeys.indexOf(e.keyCode) !== -1 ||
                    // Allow Ctrl+A, Ctrl+C, Ctrl+V, Ctrl+X
                    ((e.ctrlKey || e.metaKey) && [65, 67, 86, 88].indexOf(e.keyCode) !== -1)
                ) {
                    return;
                }
                e.preventDefault();
            });
            $("#EndDate").on("keydown paste", function(e) {
                // Allow: tab, shift, ctrl, alt, home, end, left, right, up, down, F5, etc.
                var allowedKeys = [9, 16, 17, 18, 35, 36, 37, 38, 39, 40, 116];
                if (
                    allowedKeys.indexOf(e.keyCode) !== -1 ||
                    // Allow Ctrl+A, Ctrl+C, Ctrl+V, Ctrl+X
                    ((e.ctrlKey || e.metaKey) && [65, 67, 86, 88].indexOf(e.keyCode) !== -1)
                ) {
                    return;
                }
                e.preventDefault();
			});
        });
    </script>
}
